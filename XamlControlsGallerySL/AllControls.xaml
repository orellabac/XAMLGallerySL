<navigation:Page x:Class="AppUIBasics.AllControls" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="800"
           Title="AllControls Page">
    <StackPanel x:Name="LayoutRoot" Orientation="Vertical">
        <Image x:Name="image" VerticalAlignment="Top"  Margin="0,0,0,0" Source="Assets/MainPage_Banner.jpg" Stretch="Fill" Height="250"/>
        <ScrollViewer Height="400">
            <StackPanel x:Name="Items" Orientation="Vertical" ScrollViewer.VerticalScrollBarVisibility="Visible" />
        </ScrollViewer>
    </StackPanel>
</navigation:Page>
